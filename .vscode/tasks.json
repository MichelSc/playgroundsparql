    "version": "2.0.0",
    "tasks": [
        {
            "label": "Restart graphdb",
            "type": "shell",
            "command": "sudo docker start graphdb-mich",
        },
        {
            "label": "Import rdf",
            "type": "shell",
            "command": "scripts/importrdf.sh ${relativeFile}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "echo file: ${relativeFile}"
        }
    ]
}